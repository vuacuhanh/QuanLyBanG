@{
    ViewBag.Title = "Register";
}
@model DoAn.Models.USER


<!DOCTYPE html>

<html>
<head>
    <title>DangKy</title>
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
</head>
<body>
    <section class="vh-80" style="background-color: #205295; ">
        <div class="container py-5 h-1000">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-3 p-lg-4 text-black" style="height: auto;">

                                    <form method="post" action="@Url.Action("Register", "DangNhap")">
                                        <div class="d-flex align-items-center mb-1 pb-1">
                                            <img src="~/assets/img/Fila-Logo.jpg" style="width:100px" />
                                        </div>

                                        <h5 class="fw-normal mb-2 pb-3" style="letter-spacing: 1px;">Register for a new account</h5>

                                        <div class="form-outline mb-2" style="width: 70%;">
                                            <input type="text" id="HoTen" name="HoTen" class="form-control" />
                                            <label class="form-label" for="HoTen">Full Name</label>
                                        </div>

                                        <div class="form-outline mb-2" style="width: 70%;">
                                            <input type="email" id="Email" name="Email" class="form-control" />
                                            <label class="form-label" for="Email">Email address</label>
                                        </div>

                                        <div class="form-outline mb-2" style="width: 70%;">
                                            <input type="text" id="TaiKhoan" name="TaiKhoan" class="form-control" />
                                            <label class="form-label" for="TaiKhoan">Username</label>
                                        </div>

                                        <div class="form-outline mb-2" style="width: 70%;">
                                            <input type="password" id="MatKhau" name="MatKhau" class="form-control" />
                                            <label class="form-label" for="MatKhau">Password</label>
                                        </div>

                                        <div class="form-outline mb-2" style="width: 70%;">
                                            <input type="password" id="NhapLaiMatKhau" name="NhapLaiMatKhau" class="form-control" />
                                            <label class="form-label" for="NhapLaiMatKhau">Confirm Password</label>
                                        </div>

                                        <div class="pt-1 mb-2">
                                            <button class="btn btn-dark btn-sm btn-block" type="submit">Register</button>
                                        </div>

                                        <p class="mb-2 pb-lg-2" style="color: #393f81;">
                                            Already have an account? <a href="@Url.Action("DangNhap", "DangNhap")" style="color: #393f81;">Login here</a>
                                        </p>
                                    </form>

                                    @if (ViewBag.RegistrationSuccess != null)
                                    {
                                        <div class="alert alert-success">
                                            @ViewBag.RegistrationSuccess
                                        </div>
                                    }

                                </div>
                            </div>
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/assets/img/DangKyBanner.jpg"
                                     alt="login form" class="img-fluid" style="border-radius: 0rem 1rem 1rem 0rem;@*margin-left:-10px*@" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
