@{
    Layout = null;
}
<!DOCTYPE html>
@model DoAn.Models.USER

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DangNhap</title>
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
 

</head>
<body>
    <section class="vh-90" style="background-color: #f98866;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/assets/img/DangNhapBanner.jpg"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form method="post" action="@Url.Action("KiemTraDangNhap", "DangNhap")">

                                        <!-- Mã HTML khác ở đây -->

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                                        <!-- Hiển thị thông báo lỗi cho từng trường -->
                                        <div class="form-outline mb-4">
                                            <input type="text" id="TaiKhoan" name="TaiKhoan" class="form-control form-control-lg" />
                                            <label class="form-label" for="TaiKhoan">Username</label>

                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" id="MatKhau" name="MatKhau" class="form-control form-control-lg" />
                                            <label class="form-label" for="MatKhau">Password</label>
                                        </div>

                                        <!-- Mã HTML khác ở đây -->

                                        <button type="submit" class="btn btn-primary btn-lg">Sign in</button>
                                        <br />
                                        <br />
                                        <a target="_blank" class="btn btn-secondary " href="@ViewBag.response">

                                            <i class="fab fa-google mr-2"></i> <img src="https://www.google.com/chrome/static/images/chrome-logo.svg" width="24px"/>  Đăng nhập bằng Google
                                        </a>
                                        <br />

                                        <a class="small text-muted" href="@Url.Action("ResetPass", "DangNhap")">Forgot password?</a>
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                            Don't have an account? <a href="@Url.Action("DangKy", "DangNhap")"
                                                                      style="color: #393f81;">Register here</a>
                                        </p>
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                        <a href="#!" class="small text-muted">Terms of use.</a>
                                        <a href="#!" class="small text-muted">Privacy policy</a>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>