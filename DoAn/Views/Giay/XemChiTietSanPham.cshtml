@model DoAn.Models.SANPHAM
@{
    ViewBag.Title = "XemChiTietSanPham";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<!-- Start Content -->
<section class="bg-light">
    <div class="container pb-5">
        <div class="row">
            <div class="col-lg-5 mt-5">
                <div class="card mb-3">
                    <img class="card-img img-fluid" src="~/assets/Images/@Model.HINHANH.AnhChinh" alt="Card image cap" id="product-detail">
                </div>
                <div class="row">
                    <!--Start Controls-->
                    <div class="col-1 align-self-center">
                        <a href="#multi-item-example" role="button" data-bs-slide="prev">
                            <i class="text-dark fas fa-chevron-left"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                    </div>
                    <!--End Controls-->
                    <!--Start Carousel Wrapper-->
                    <div id="multi-item-example" class="col-10 carousel slide carousel-multi-item" data-bs-ride="carousel">
                        <!--Start Slides-->
                        <div class="carousel-inner product-links-wap" role="listbox">

                            <!--First slide-->
                            <!--First slide-->
                            <div class="carousel-item active">
                                <div class="row justify-content-center align-items-center">
                                    <div class="col-12 col-md-4 text-center">
                                        <a href="#">
                                            <img class="card-img img-fluid" src="~/assets/Images/@Model.HINHANH.Anh1" alt="Product Image 1">
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="row justify-content-center align-items-center">
                                    <div class="col-12 col-md-4 text-center">
                                        <a href="#">
                                            <img class="card-img img-fluid" src="~/assets/Images/@Model.HINHANH.Anh2" alt="Product Image 2">
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="row justify-content-center align-items-center">
                                    <div class="col-12 col-md-4 text-center">
                                        <a href="#">
                                            <img class="card-img img-fluid" src="~/assets/Images/@Model.HINHANH.AnhChinh" alt="Product Image 3">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--End Slides-->
                    </div>
                    <!--End Carousel Wrapper-->
                    <!--Start Controls-->
                    <div class="col-1 align-self-center">
                        <a href="#multi-item-example" role="button" data-bs-slide="next">
                            <i class="text-dark fas fa-chevron-right"></i>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <!--End Controls-->
                </div>
            </div>
            <!-- col end -->
            <div class="col-lg-7 mt-5">
                <div class="card">
                    <div class="card-body pt-lg-5 ">
                        <h1 class="h2">@Model.TenSanPham</h1>
                        <p class="h3 py-2 text-danger">$@Model.DonViGia</p>
                        <p class="py-2">
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <span class="list-inline-item text-dark">Rating 4.8 | 36 Comments</span>
                        </p>

                        <h6>Description:</h6>
                        <p>@Model.DANHMUC.TenDanhMuc</p>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h6>Avaliable Color :</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong>White / Black</strong></p>
                            </li>
                        </ul>

                        <h6></h6>
                        <ul class="list-unstyled pb-3">
                            <li>@Model.Mota</li>

                        </ul>

                        <form action="" method="GET">
                            <input type="hidden" name="product-title" value="Activewear">
                            <div class="row">
                                <div class="col-auto">
                                    <ul class="list-inline pb-3">
                                        <li class="list-inline-item">
                                            Size :
                                            <input type="hidden" name="product-size" id="product-size" value="S">
                                        </li>
                                        <li class="list-inline-item"><span class="btn btn-success btn-size">39</span></li>
                                        <li class="list-inline-item"><span class="btn btn-success btn-size">40</span></li>
                                        <li class="list-inline-item"><span class="btn btn-success btn-size">41</span></li>
                                        <li class="list-inline-item"><span class="btn btn-success btn-size">42</span></li>
                                    </ul>
                                </div>
                                <div class="col-auto">
                                    <ul class="list-inline pb-3">
                                        <li class="list-inline-item text-right">
                                            Quantity
                                            <input type="hidden" name="product-quanity" id="product-quanity" value="1">
                                        </li>
                                        <li class="list-inline-item"><span class="btn btn-success" id="btn-minus">-</span></li>
                                        <li class="list-inline-item"><span class="badge bg-secondary" id="var-value">1</span></li>
                                        <li class="list-inline-item"><span class="btn btn-success" id="btn-plus">+</span></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="row pb-3">
                                <div class="col d-grid">
                                    <button class="btn btn-success btn-lg cart-action" data-action="add" data-product-id="@Model.ID_SanPham">ADD TO CART</button>
                                </div>
                                <div class="col d-grid">
                                    <button class="btn btn-success btn-lg cart-action" data-action="buy" data-product-id="@Model.ID_SanPham">BUY NOW</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function() {
        $(".cart-action").click(function(e) {
            e.preventDefault();

            var action = $(this).data("action");
            var productId = $(this).data("product-id");
            var quantity = $("#var-value").text();
            var isBuyNow = action === "buy";

            $.ajax({
                url: '@Url.Action("ThemGioHang", "GioHang")',
                type: 'GET',
                data: { ms: productId, quantity: quantity, isBuyNow: isBuyNow },
                success: function(response) {
                    if (isBuyNow) {
                        window.location.href = '@Url.Action("GioHang", "GioHang")';
                    } else {
                        alert("Sản phẩm đã được thêm vào giỏ hàng");
                        // Update cart count or other UI changes if needed
                    }
                },
                error: function(xhr, status, error) {
                    alert("Có lỗi xảy ra, vui lòng thử lại sau.");
                }
            });
        });
    });
</script>
