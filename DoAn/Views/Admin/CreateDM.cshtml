@model DoAn.Models.DANHMUC

@{
    ViewBag.Title = "CreateDM";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Thêm danh mục</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">DANHMUC</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group row">
                    @Html.LabelFor(model => model.ID_DanhMuc, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.ID_DanhMuc, new { @class = "form-control", type = "number" })
                        @Html.ValidationMessageFor(model => model.ID_DanhMuc, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.TenDanhMuc, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenDanhMuc, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="offset-md-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<h2 class="mt-3" style="color:red;">@ViewBag.TB</h2>
<div class="container mt-3">
    @Html.ActionLink("Back to List", "ShowDanhMuc", null, new { @class = "btn btn-secondary" })
</div>
